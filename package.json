{
  "name": "@inverter-network/<pkg_name>",
  "version": "0.0.0",
  "author": "InverterNetwork <github@InverterNetwork>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/InverterNetwork/<pkg_name>.git"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "dependencies": {
    "type-fest-4": "npm:type-fest@^4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18",
    "@commitlint/config-conventional": "^18",
    "@types/bun": "^1",
    "@types/lodash": "^4.17.1",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "abitype": "^1",
    "eslint-config-prettier": "^9",
    "eslint-plugin-prettier": "^5",
    "husky": "^9",
    "lint-staged": "^15",
    "pinst": "^3",
    "prettier": "^3",
    "standard-version": "^9"
  },
  "peerDependencies": {
    "eslint": "^8",
    "typescript": "^5"
  },
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/index.js"
  },
  "bugs": {
    "url": "https://github.com/InverterNetwork/<pkg_name>/issues"
  },
  "description": "INVERTER typescript NPM package template",
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/InverterNetwork/<pkg_name>",
  "keywords": [
    "InverterNetwork",
    "npm",
    "contracts",
    "web3",
    "ethereum",
    "solidity",
    "evm"
  ],
  "license": "LGPL-3.0",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "bun lint:fix",
      "bun prettier:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.dev.json",
    "build": "bun clean && tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "clean": "rm -rf dist tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "package": "bun run build && npm pack",
    "postpack": "pinst --enable",
    "pre-commit": "lint-staged",
    "pre-push": "bun run build",
    "lint:fix": "eslint --ext .tsx --ext .ts ./src --fix",
    "prettier:fix": "prettier --write ./src/.",
    "release": "standard-version -a",
    "release:alpha": "standard-version -a --prerelease alpha --skip.changelog",
    "release:beta": "standard-version -a --prerelease beta --skip.changelog",
    "release:pub": "git push --follow-tags origin main"
  },
  "types": "./dist/index.d.ts"
}
